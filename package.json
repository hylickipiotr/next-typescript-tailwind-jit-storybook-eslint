{
  "name": "oko-4.0-cms-client",
  "description": "Custom OKO.Press CMS client",
  "version": "1.0.0",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc src/",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "tailwind-storybook-dev": "TAILWIND_MODE=watch NODE_ENV=development postcss ./src/styles/tailwind.css -o ./.storybook/tailwind.css -w",
    "tailwind-storybook-build": "TAILWIND_MODE=build NODE_ENV=production postcss ./src/styles/tailwind.css -o ./.storybook/tailwind.css",
    "storybook-dev": "start-storybook -p 6006",
    "storybook-build": "npm-run-all -p tailwind-storybook-build build-storybook",
    "sb": "npm-run-all -p tailwind-storybook-dev storybook-dev"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^9.1.4",
    "next": "latest",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@storybook/addon-essentials": "^6.2.7",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.2.7",
    "@tailwindcss/line-clamp": "^0.2.0",
    "@types/classnames": "^2.2.11",
    "@types/node": "^12.12.21",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.2.2",
    "classnames": "^2.2.6",
    "eslint": "^7.17.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.9",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.1",
    "prettier": "^2.2.1",
    "react-icons": "^4.2.0",
    "storybook": "^6.2.7",
    "tailwindcss": "^2.1.1",
    "typescript": "4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "license": "MIT"
}
